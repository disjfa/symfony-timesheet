<div class="progress-stacked" style="height: .7rem;" >
    {% for bar in this.bars %}
        <div class="progress" role="progressbar" aria-label="{{ bar.label }}" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100" style="width: {{ bar.width }}%">
            <div class="progress-bar {{ bar.class }}"></div>
        </div>
    {% endfor %}
</div>

<div class="d-flex justify-content-between small">
    <div>
        {{ this.spent | as_hours }}
    </div>
    <div>
        {{ this.estimate | as_hours }}
    </div>
</div>
